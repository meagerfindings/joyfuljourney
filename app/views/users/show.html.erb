<h1 id=header-name><%= @user.name %></h1>
<div id=user-details>
  <p><%= @user.first_name %></p>
  <p><%= @user.middle_name %></p>
  <p><%= @user.last_name %></p>
  <p><%= @user.nickname %></p>
  <p><%= @user.birthdate %></p>
</div>

<div id="post-count">
  <%= link_to "#{@user.post_count} Posts", "/users/#{@user.id}/posts" %>
</div>

<div>
  <%= link_to 'Edit User', edit_user_path(@user) %>
</div>

<%= link_to 'All Users', users_path %>
