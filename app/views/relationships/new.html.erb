<div class="container py-4">
  <div class="row">
    <div class="col-lg-6 mx-auto">
      <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white">
          <h3 class="mb-0">
            <i class="bi bi-person-plus-fill me-2"></i>
            Add Family Relationship
          </h3>
        </div>
        
        <div class="card-body">
          <%= form_with(model: [@user, @relationship], local: true) do |form| %>
            <% if @relationship.errors.any? %>
              <div class="alert alert-danger">
                <h6 class="alert-heading">Please fix the following errors:</h6>
                <ul class="mb-0">
                  <% @relationship.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>
            
            <div class="mb-3">
              <%= form.label :related_user_id, "Family Member", class: "form-label" %>
              <%= form.select :related_user_id, 
                  options_for_select(@available_users.map { |u| [u.name, u.id] }, params[:related_user_id]),
                  { prompt: "Select a family member..." },
                  class: "form-select" %>
            </div>
            
            <div class="mb-4">
              <%= form.label :relationship_type, "Relationship Type", class: "form-label" %>
              <%= form.select :relationship_type,
                  options_for_select(
                    Relationship::RELATIONSHIP_TYPES.map { |k, v| [k.to_s.humanize, v] },
                    params[:relationship_type]
                  ),
                  { prompt: "Select relationship type..." },
                  class: "form-select" %>
              <div class="form-text">
                Choose how <%= @user.first_name %> is related to this person
              </div>
            </div>
            
            <div class="alert alert-info">
              <i class="bi bi-info-circle me-1"></i>
              <strong>Note:</strong> The inverse relationship will be created automatically.
              For example, if you add someone as a "Parent", they will have <%= @user.first_name %> as their "Child".
            </div>
            
            <div class="d-flex justify-content-between">
              <%= link_to "Cancel", user_relationships_path(@user), class: "btn btn-secondary" %>
              <%= form.submit "Add Relationship", class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>