<div class="reactions-section">
  <div class="d-flex align-items-center gap-2 mb-2">
    <% if @post.total_reactions > 0 %>
      <!-- Show reaction summary -->
      <div class="reaction-summary d-flex align-items-center gap-1">
        <% @post.reaction_counts.each do |reaction_type, count| %>
          <span class="badge bg-light text-dark d-flex align-items-center gap-1">
            <%= Reaction::REACTION_EMOJIS[reaction_type] %>
            <small><%= count %></small>
          </span>
        <% end %>
        <small class="text-muted ms-2">
          <%= pluralize(@post.total_reactions, 'reaction') %>
        </small>
      </div>
    <% end %>
  </div>

  <% if current_user %>
    <!-- Reaction buttons -->
    <div class="reaction-buttons">
      <% user_reaction = @post.user_reaction(current_user) %>
      
      <div class="btn-group" role="group" aria-label="Reactions">
        <% Reaction::REACTION_TYPES.each do |reaction_type| %>
          <% is_active = user_reaction&.reaction_type == reaction_type %>
          
          <%= form_with model: [@post, Reaction.new], local: true, class: "d-inline" do |form| %>
            <%= form.hidden_field :reaction_type, value: reaction_type %>
            <%= form.submit class: "btn #{'btn-primary' if is_active} #{'btn-outline-secondary' unless is_active} btn-sm reaction-btn",
                title: reaction_type.humanize,
                data: { reaction_type: reaction_type } do %>
              <%= Reaction::REACTION_EMOJIS[reaction_type] %>
              <span class="reaction-label d-none d-md-inline ms-1"><%= reaction_type.humanize %></span>
            <% end %>
          <% end %>
        <% end %>
        
        <% if user_reaction %>
          <%= form_with model: [@post, user_reaction], method: :delete, local: true, class: "d-inline" do |form| %>
            <%= form.submit "Remove", class: "btn btn-outline-danger btn-sm ms-2" %>
          <% end %>
        <% end %>
      </div>
    </div>
  <% else %>
    <div class="alert alert-info mt-2">
      <%= link_to "Log in", login_path %> to react to this post.
    </div>
  <% end %>
  
  <% if @post.total_reactions > 0 %>
    <!-- Detailed reactions list (collapsible) -->
    <div class="mt-3">
      <a class="btn btn-link btn-sm p-0 text-decoration-none" data-bs-toggle="collapse" href="#reactionDetails" role="button">
        <small>See who reacted</small>
        <i class="bi bi-chevron-down ms-1"></i>
      </a>
      
      <div class="collapse mt-2" id="reactionDetails">
        <div class="card card-body bg-light">
          <% @post.reaction_counts.each do |reaction_type, count| %>
            <div class="mb-2">
              <strong class="d-flex align-items-center gap-2">
                <%= Reaction::REACTION_EMOJIS[reaction_type] %>
                <%= reaction_type.humanize %>
                <span class="badge bg-secondary"><%= count %></span>
              </strong>
              <div class="ms-4">
                <% @post.reactions.of_type(reaction_type).includes(:user).recent.each do |reaction| %>
                  <span class="badge bg-primary bg-opacity-10 text-primary me-1 mb-1">
                    <%= reaction.user.name %>
                  </span>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<style>
.reaction-btn {
  font-size: 1.1rem;
  min-width: 40px;
  transition: all 0.2s ease;
}

.reaction-btn:hover {
  transform: scale(1.1);
}

.reaction-summary .badge {
  font-size: 0.9rem;
}

@media (max-width: 768px) {
  .reaction-label {
    display: none !important;
  }
  
  .reaction-btn {
    min-width: 35px;
    font-size: 1rem;
  }
}
</style>