<div class="hero-section min-vh-100 d-flex align-items-center" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
  <div class="container">
    <div class="row justify-content-center text-center text-white">
      <div class="col-lg-8">
        <h1 class="display-1 fw-bold mb-4" data-turbo-permanent>
          Joyful Journey
        </h1>
        <p class="lead fs-3 mb-5">
          Capture, share, and celebrate your family's precious memories together
        </p>
        
        <%= turbo_frame_tag "welcome_actions", class: "d-flex flex-column flex-md-row gap-3 justify-content-center" do %>
          <% if current_user %>
            <div class="welcome-user-section">
              <h3 class="mb-4">Welcome back, <%= current_user.first_name || current_user.username %>!</h3>
              <%= link_to "View All Posts", posts_path, 
                  class: "btn btn-light btn-lg px-5 py-3 me-3", 
                  data: { turbo_frame: "_top" } %>
              <%= link_to "Create New Post", new_post_path, 
                  class: "btn btn-outline-light btn-lg px-5 py-3", 
                  data: { turbo_frame: "_top" } %>
            </div>
          <% else %>
            <div class="welcome-guest-section">
              <%= link_to "Join Our Family", "#{new_user_path}?claimed=true", 
                  class: "btn btn-light btn-lg px-5 py-3 me-3 shadow", 
                  data: { turbo_frame: "_top" } %>
              <%= link_to "Sign In", login_path, 
                  class: "btn btn-outline-light btn-lg px-5 py-3 shadow", 
                  data: { turbo_frame: "_top" } %>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
    
    <div class="row mt-5">
      <div class="col-12 text-center">
        <%= turbo_frame_tag "feature_preview", class: "row g-4 mt-4" do %>
          <div class="col-md-4">
            <div class="card bg-white bg-opacity-10 border-0 text-white h-100">
              <div class="card-body text-center p-4">
                <div class="display-4 mb-3">📱</div>
                <h5 class="card-title">Share Memories</h5>
                <p class="card-text">Capture and share your family's special moments with beautiful posts</p>
              </div>
            </div>
          </div>
          <div class="col-md-4">
            <div class="card bg-white bg-opacity-10 border-0 text-white h-100">
              <div class="card-body text-center p-4">
                <div class="display-4 mb-3">👨‍👩‍👧‍👦</div>
                <h5 class="card-title">Family Connections</h5>
                <p class="card-text">Connect with family members and see their stories unfold</p>
              </div>
            </div>
          </div>
          <div class="col-md-4">
            <div class="card bg-white bg-opacity-10 border-0 text-white h-100">
              <div class="card-body text-center p-4">
                <div class="display-4 mb-3">🎉</div>
                <h5 class="card-title">Milestone Tracking</h5>
                <p class="card-text">Keep track of important milestones and celebrate achievements</p>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
